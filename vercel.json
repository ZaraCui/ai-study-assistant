{
  "version": 2,
  "builds": [
    {
      "src": "backend/requirements.txt",
      "use": "@vercel/python"
    },
    {
      "src": "backend/app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "env": {
    "OPENAI_API_KEY": "your-api-key",
    "NOTES_DIR": "backend/data/notes/COMP2123",
    "INDEX_PATH": "backend/data/index/comp2123",
    "DEFAULT_COURSE": "COMP2123"
  }
}
