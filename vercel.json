{
  "version": 2,
  "builds": [
    {
      "src": "backend/requirements.txt",
      "use": "@vercel/python"
    },
    {
      "src": "backend/app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "env": {
    "OPENAI_API_KEY": "your-api-key",
    "NOTES_DIR": "/opt/render/project/src/backend/data/index/comp2123.index",
    "INDEX_PATH": "/opt/render/project/src/backend/data/notes/COMP2123",
    "DEFAULT_COURSE": "COMP2123"
  },
  "routes": [
    {
      "src": "/.*",
      "dest": "backend/app.py"
    }
  ]
}
